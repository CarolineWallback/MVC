@model CityViewModel

@*Showing all cities in a country*@

<div class="container">
<a asp-action="CountryList" class="btn btn-dark mb-5">Return to all countries</a>
@if (Model.Cities.Count == 0)
{

    <h4 class="fst-italic m-3">No cities here..</h4>
}
else
{
    
    <h2>Cities in @Model.Cities.First().Country.CountryName</h2>
    <div class="row bg-dark text-light fw-semibold p-1 mt-3">
        <div class="col p-1">
            <h4>@Html.DisplayNameFor(Model => Model.Name)</h4>
        </div>
        <div class="col p-1">
            <h4>@Html.DisplayNameFor(Model => Model.Country)</h4>
        </div>
        <div class="col-3 p-1">
        </div>
    </div>
        
    foreach (var city in Model.Cities)
    {
        <partial name="../Shared/_cityDetailsPartial.cshtml" model="city" />
    }

}

</div>