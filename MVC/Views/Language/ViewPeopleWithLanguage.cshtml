@model PeopleViewModel

@*Showing all people with a language*@

<div class="container">
    <a asp-action="LanguageList" class="btn btn-dark mb-5">Return to all languages</a>
    @if (Model.PeopleList.Count == 0)
    {

        <h4 class="fst-italic m-3">No people here..</h4>
    }
    else
    {

        <h2>People speaking @Model.PeopleList.First().Languages.First().LanguageName</h2>
        <div class="row bg-dark text-light fw-semibold p-1 mt-3">
            <div class="col p-1">
                <h4>@Html.DisplayNameFor(Model => Model.Name)</h4>
            </div>
            <div class="col p-1">
                <h4>@Html.DisplayNameFor(Model => Model.PhoneNumber)</h4>
            </div>
            <div class="col p-1">
                <h4>@Html.DisplayNameFor(Model => Model.City)</h4>
            </div>
            <div class="col p-1">
                <h4>@Html.DisplayNameFor(Model => Model.Languages)</h4>
            </div>
            <div class="col p-1"></div>
        </div>

        foreach (var person in Model.PeopleList)
        {
            <partial name="../Shared/_personDetailsPartial.cshtml" model="person" />
        }

    }

</div>