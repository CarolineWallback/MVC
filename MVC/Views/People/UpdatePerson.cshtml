@model CreatePersonViewModel

@{
    ViewData["Title"] = "Update Person";
}

@*Edit person*@
<div class="container add-new mt-5">
    <form asp-controller="People" asp-action="SavePerson" asp-route-id="@Model.Id" method="post">
        <h4 class="fw-bold mb-2">Edit person: </h4>
        <br />

        <div class="form-row">
            <label class="fw-bold">@Html.DisplayNameFor(Model => Model.Name)</label>
            <input class="input rounded border-light m-1 add-new-input" asp-for="Name" type="text" />
        </div>

        <div class="form-row">
            <label class="fw-bold">@Html.DisplayNameFor(Model => Model.PhoneNumber)</label>
            <input class="input rounded border-light m-1 add-new-input" asp-for="PhoneNumber" type="text" />
        </div>

        <div class="form-row">
            <label class="fw-bold">@Html.DisplayNameFor(Model => Model.City)</label>
            <select name="CityId" asp-for="CityId" class="input rounded border-light m-1 add-new-input" asp-items="ViewBag.Cities" selected="@Model.CityId"></select>
        </div>

        <div class="form-row">
            <label class="fw-bold">@Html.DisplayNameFor(Model => Model.Languages)</label>
            <select name="LanguageIds" asp-for="LanguageIds" asp-items="ViewBag.Languages" class="input rounded border-light m-1 add-languages" multiple selected="@Model.Languages"></select>
        </div>

        <div>
            <input class="form-button btn btn-success m-1" type="submit" value="Update Person" />
        </div>

    </form>
</div>

