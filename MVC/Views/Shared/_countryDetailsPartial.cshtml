@model Country

@if (Model != null)
{
    <div class="row bg-light text-bg-light p-1 border-row">
        <div class="col d-flex justify-content-between">
            <div>
                <h5>@Model.CountryName</h5>
            </div>

            <div>
                <a type="submit" class="btn btn-success btn-sm" asp-controller="Country" asp-action="ViewCitiesInCountry" asp-route-id=@Model.CountryId>View Cities</a>
                <a type="submit" class="btn btn-danger btn-sm" asp-controller="Country" asp-action="DeleteCountry" asp-route-id=@Model.CountryId>Delete Country</a>
            </div>
        </div>
    </div>
}


