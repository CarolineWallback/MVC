<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
    <script src="~/lib/bootstrap/js/bootstrap.js"> </script>
    <link href="~/css/custom.css" rel="stylesheet" />
    
</head>
<body>
    <div class="main-content">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-black">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="About" style="padding-right: 3rem;">
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart-fill" viewBox="0 0 16 16">
                            <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z" />
                        </svg>
                        <span class="tab"></span> Home
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="nav navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Projects">Projects</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Doctor" asp-action="FeverCheck">Doctor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="GuessingGame" asp-action="GuessingGame">Guessing Game</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="People" asp-action="PeopleList">People</a>
                            </li>
                            @*<li class="nav-item">
                                <a class="nav-link" asp-controller="Ajax" asp-action="Index">Ajax</a>
                            </li>*@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container body-content mt-3">
            @RenderBody()
        </div>
        <div class="container footer">
            <p>
                &copy; @DateTime.Now.ToString("yyyy-MM-dd") Caroline Wallbäck
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/javascript.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
