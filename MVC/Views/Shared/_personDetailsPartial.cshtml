@model Person

@if(Model != null)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h5>@Model.Name</h5>
            </div>
            <div class="col">
                <p>@Model.PhoneNumber</p>
            </div>
            <div class="col">
                <p>@Model.City</p>
            </div>
            <div class="col">
                <button class="btn btn-warning btn-sm" onclick="CloseDetails()">Close Details</button>
            </div>
        </div>
    </div>
}

else
{
    <div class="mt-3">
        @ViewBag.SearchResult
    </div>
}





